        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            if(txtContrasena.Text == "")
            {
                MessageBox.Show("Debe ingresar una contraseña para abrir la aplicacion");
            }
            else if(txtContrasena.Text == "12345678")
            {
                frmMenuPrin  frmMenuPrin = new frmMenuPrin();
                frmMenuPrin.Show();
                this.Hide();
            }
            else
            {
                MessageBox.Show("Contraseña incorrecta");
                txtContrasena.Clear();
            }
        }

