    private void btnregresar_Click(object sender, EventArgs e)
    {
        // Cierra el formulario actual
        this.Close();

        public frmDatos()
        {
            InitializeComponent();
        }

        private void butGuardar_Click(object sender, EventArgs e)
        {
            string nombre = txtNombre.Text;
            string apellidos = txtApellidos.Text;
            string direccion = txtDireccion.Text;
            string ciudad = txtCiudad.Text;
            string fechaNacimiento = dateFechaNacimiento.Value.ToString("dd/MM/yyyy");
            string estadoCivil = comEstadoCivil.Text;

            string sexo = "";
            if (rdoHombre.Checked) sexo = "Hombre";
            if (rdoMujer.Checked) sexo = "Mujer";

            string ruta = @"C:\DatosFormulario\datos.txt";

            Directory.CreateDirectory(@"C:\DatosFormulario");

            using (StreamWriter sw = new StreamWriter(ruta, true))
            {
                sw.WriteLine("---- REGISTRO ----");
                sw.WriteLine("Nombre: " + nombre);
                sw.WriteLine("Apellidos: " + apellidos);
                sw.WriteLine("Dirección: " + direccion);
                sw.WriteLine("Ciudad: " + ciudad);
                sw.WriteLine("Fecha Nacimiento: " + fechaNacimiento);
                sw.WriteLine("Estado Civil: " + estadoCivil);
                sw.WriteLine("Sexo: " + sexo);
                sw.WriteLine();
            }

            MessageBox.Show("Datos guardados correctamente.");
        }

        private void butRegresar_Click(object sender, EventArgs e)
        {
            // Cierra el formulario actual
            this.Close();
        }

        private void button1_Click(object sender, EventArgs e)
        {
           
            // Enfermedad
            string enfermedad = rdoSiEnfermedad.Checked ? combEnfermedades.Text : "No padece";

            // Alergia
            string alergia = rdoSiAlergias.Checked ? combAlergias.Text : "No tiene alergias";

            // Operación
            string operado = rdoSiOperado.Checked ? combOperaciones.Text : "No ha sido operado";

            // Ejercicio
            string ejercicio = rdoSiEjercicio.Checked ? combEjercicio.Text : "No realiza ejercicio";

            // Depresión
            string depresion = rdoSiDepresion.Checked ? "Sí" : "No";

       
            {
                Console.WriteLine("---- DATOS CLÍNICOS ----");
                Console.WriteLine("Enfermedad: " + enfermedad);
                Console.WriteLine("Alergia: " + alergia);
                Console.WriteLine("Operado: " + operado);
                Console.WriteLine("Ejercicio: " + ejercicio);
                Console.WriteLine("Depresión: " + depresion);
                Console.WriteLine("-------------------------");
                Console.WriteLine();
            }

            MessageBox.Show("Datos clínicos guardados correctamente.");
        }

