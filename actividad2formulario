     private void button1_Click(object sender, EventArgs e)
     {
         int resultado;
         Clases.clsOperaciones clsOperaciones = new Clases.clsOperaciones();
         resultado = clsOperaciones.Sumar(int.Parse(txtNumero1.Text), int.Parse(txtNumero2.Text));
         txtResultado.Text = resultado.ToString();
     }
    int resultado;
    Clases.clsRestar clsRestar = new Clases.clsRestar();
    resultado = clsRestar.Restar (int.Parse(txtNumero3.Text), int.Parse(txtNumero4.Text));
    txtResultado2.Text = resultado.ToString();
}

private void Multiplicar_Click(object sender, EventArgs e)
{
    int resultado;
    Clases.clsMultiplicar clsMultiplicar = new Clases.clsMultiplicar();
    resultado = clsMultiplicar.Multiplicar (int.Parse(txtNumero5.Text), int.Parse(txtNumero6.Text));
    txtResultado3.Text = resultado.ToString();  
}

private void Dividir_Click(object sender, EventArgs e)
{
    int resultado;
    Clases.clsDividir clsDividir = new Clases.clsDividir();
    resultado = clsDividir.Dividir (int.Parse(txtNumero7.Text), int.Parse (txtNumero8.Text));
    txtResultado4.Text = resultado.ToString();
}

