  //declarar variables
            string nombre;
            string edad;
            string fechaNac;
            string carrera;
            string cierre;

            Console.WriteLine("Bienvenidos a UMI/Universidad Coppel");
            Console.WriteLine("\n\nIngresa los datos que acontinuacion se te piden: ");
